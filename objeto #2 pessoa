# Python noção 00

class Pessoa :
  def __init__(self, nome, idade, endereco, genero) :
    self.nome = nome
    self.idade = idade
    self.endereco = endereco
    self.genero = genero

  def apresentar(self) :
    return f"Olá, meu nome é {self.nome}, tenho {self.idade}, anos, moro em {self.endereco}, e eu do gênero {self.genero}."


pessoa1 = Pessoa('Thayonara', 19, 'Recife', 'Feminino')
pessoa2 = Pessoa('Lucas', 19, 'Recife', 'masculino')


print(pessoa1.apresentar())


print(pessoa2.apresentar())
